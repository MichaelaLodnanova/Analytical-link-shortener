{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "dependsOn": ["^db:seed"]
    },
    "db:generate": {
      "cache": false
    },
    "db:seed": {
      "cache": false,
      "dependsOn": ["^db:push"]
    },
    "db:push": {
      "cache": false,
      "dependsOn": ["^db:generate"]
    },
    "format:check": {},
    "format:write": {},
    "ts-check": {}
  }
}
